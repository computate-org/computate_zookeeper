[Unit]
Description=An open source centralized cluster manager. 
After=network.target

[Service]
Type=simple
WorkingDirectory={{ APP_OPT }}
ExecStart=/usr/bin/podman run -v {{ APP_DATA }}:/data -v {{ APP_OPT }}/conf:/conf --publish {{ APP_PORT }}:{{ APP_PORT }} {{ APP_NAME }}
ExecStop=/usr/bin/podman stop -t 2 {{ APP_NAME }}
Restart=on-failure

[Install]
WantedBy=multi-user.target

